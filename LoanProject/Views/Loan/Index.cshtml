@model IEnumerable<LoanModel>

<div class="container">
    <div class="d-flex justify-content-sm-between align-items-center mb-5">
        <hi>Loans</hi>
        <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Register"><i class="bi bi-file-earmark-plus mx-2"></i>Register new loan</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-light" role="alert" >
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

<table id="loans" class="table table-light table-striped mt-5">
    <thead>
        <tr>
            <th scope="col">Receiver</th>
            <th scope="col">Supplier</th>
            <th scope="col">Book</th>
            <th scope="col">Update Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null)
        {
            @foreach(var loan in Model)
            {
                <tr>
                    <th scope="row">@loan.Receiver</th>
                    <td>@loan.Supplier</td>
                    <td>@loan.BorrowedBook</td>
                    <td>@loan.LastBorrowDate</td>
                    <td>
                            <a asp-controller="Loan" asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Edit</a>
                            <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-2"></i>Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
